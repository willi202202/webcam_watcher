{
  "watch_dir": "/srv/webcam/upload/",
  "check_interval_seconds": 5,
  "min_alarm_interval_minutes": 10,
  "valid_extensions": [".jpg", ".jpeg", ".png"],

  "webcam_ip": "192.168.1.201",
  "web_url": "https://roman.willi.my.to/webcam/webcam_api.html",

  "api_listen_host": "127.0.0.1",
  "api_listen_port": 5055,

  "ntfy": {
    "server": "https://ntfy.sh",
    "topic": "webcamroman",

    "defaults": { "title": "Webcam", "priority": 3, "tags": ["camera"] },
    "templates": {
      "started": { "title": "Webcam", "priority": 2, "tags": ["white_check_mark"], "message": "Watcher gestartet" },
      "stopped": { "title": "Webcam", "priority": 2, "tags": ["x"], "message": "Watcher gestoppt" },
      "online":  { "title": "Webcam", "priority": 2, "tags": ["white_check_mark"], "message": "Webcam ist ONLINE" },
      "offline": { "title": "Webcam", "priority": 4, "tags": ["x"], "message": "Webcam ist OFFLINE" },
      "motion":  { "title": "Webcam ALARM", "priority": 5, "tags": ["rotating_light"], "message": "{web_url}" },
      "cleared": { "title": "Webcam", "priority": 2, "tags": ["broom"], "message": "Alle Bilder geloescht ({deleted}). Failed: {failed}" },
      "test":    { "title": "Webcam TEST ALARM", "priority": 2, "tags": ["pushpin"], "message": "Test: {web_url}" }
    }
  }
}
